<p id="notice"><%= notice %></p>

<h1 class="display-4">Reloj Control</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Color</th>
      <th>Caracteristicas</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @reloj_controls.each do |reloj_control| %>
      <tr>
        <td><%= reloj_control.marca %></td>
        <td><%= reloj_control.modelo %></td>
        <td><%= reloj_control.color %></td>
        <td><%= reloj_control.caracteristicas %></td>
        <td><%= link_to 'Ver', reloj_control, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editar', edit_reloj_control_path(reloj_control), class: "btn btn-outline-warning" %></td>
        <td><%= link_to 'Eliminar', reloj_control, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Reloj', new_reloj_control_path %>
